


<div id="loginbox" class="margin_top"> 
  <center><h3 class="color_white">Change your password</h3></center>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {'class' => 'form-vertical', method: :put }) do |f| %> 
        <%#= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {'id' =>'loginform', 'class' => 'form-vertical'}) do |f| %>          
            <%= render "users/shared/error_messages", resource: resource %>
