                             <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'New-Password' %>
                        </div>
                    </div>
                </div>
                <div class="form-actions">
                   
                    <span class="pull-left"><%= f.submit "Change my password",:class=>"btn btn-success" %></span>
